pipeline {
  agent none
  stages {
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t rahul155/builds .'
      }
    }
    stage('Docker Push') {
      agent any
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
          sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
          sh 'docker push rahul155/builds:latest'
	}
      }
    }
    stage('Deploy New Build To Kubernetes') {
	    agent any
	    steps{
		    sh 'docker pull rahul155/builds:latest'
		    sh 'kubectl create deployment builds --image rahul155/builds'
		    sh 'kubectl set image deployments/builds builds=rahul155/builds:latest'
		    sh 'kubectl expose deployments/builds --port=80 --name=buildssvc --type=loadbalancer'
	    }
      }
  }
}
